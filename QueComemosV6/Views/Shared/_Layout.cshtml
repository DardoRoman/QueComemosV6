<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QueComemosApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-image: linear-gradient(rgba(23,165,193,.62), rgb(243,48,240,.100)), url(fondo.jpg); background-attachment: fixed; height: 100vh; background-size: cover; background-position: center; position: center; ">
    <header>
        <nav style="background-image: linear-gradient(rgba(23,165,193,.100), rgb(48,223,243,.100))" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a style="color: green" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Que Comemos</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a  style="color: white" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="RecetasDelDia">Recetas del dia</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: white"  class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Recetas por usuario</a>
                        </li>
                        <li class="nav-item"> <a  style="color: white" class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Usuarios</a> </li>
                        <li class="nav-item"> <a  style="color: white" class="nav-link text-dark" asp-area="" asp-controller="IngredienteUsuario" asp-action="Index">Mis Ingredientes</a> </li>
                        <li class="nav-item"> <a  style="color: white" class="nav-link text-dark" asp-area="" asp-controller="Receta" asp-action="Index">Recetas</a> </li>
                        <li class="nav-item"> <a  style="color: white" class="nav-link text-dark" asp-area="" asp-controller="Ingrediente" asp-action="Index">Ingredientes</a> </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
